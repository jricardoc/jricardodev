# Cache headers for static assets

# JavaScript and CSS files (with hash in filename)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Images
/images/*
  Cache-Control: public, max-age=2592000

# Favicon and icons
/*.svg
  Cache-Control: public, max-age=2592000

/*.ico
  Cache-Control: public, max-age=2592000

# Fonts
/*.woff2
  Cache-Control: public, max-age=31536000, immutable

# HTML - no cache
/*.html
  Cache-Control: no-cache

/
  Cache-Control: no-cache
